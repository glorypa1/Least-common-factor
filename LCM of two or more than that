#include <stdio.h>
int main()
{
    int a,b,c,i,HCF,LCM;
    printf ("Enter number:");
    scanf("%d%d%d",&a,&b,&c);
    for (i=1; i<=a&& i<=b && i<=c; i++)
    {
        if (a%i==0 && b%i==0 && c%i==0)
        {
            HCF=i;
        }
    }
            printf ("HCF=%d\n", HCF);
            LCM=(a*b*c)/HCF;
            printf ("LCM=%d\n",LCM);
            return 0;
}
